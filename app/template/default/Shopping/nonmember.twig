{% extends 'default_frame.twig' %}

{% set body_class = 'cart_page' %}

{% form_theme form 'Form/form_div_layout.twig' %}

{% block javascript %}
<script src="//yubinbango.github.io/yubinbango/yubinbango.js" charset="UTF-8"></script>
{% endblock javascript %}

{% block main %}
<link rel="stylesheet" href="/ec4/html/template/default/assets/css/style.css">

<main class="p-confirm cart_top p-entry">
	<div class="l-wrap">
		<div class="l-naviPage"></div>
		<div class="l-main">

			<div class="p-confirm__wrap">

				<div class="c-block01">
					<h2 class="c-block01_ttl">お客様情報</h2>
					<ol class="c-list2">
						<li>
							<span class="c-list2__number">1</span>
							<span class="c-list2__text">カートの商品</span>
						</li>
						<li class="active">
							<span class="c-list2__number">2</span>
							<span class="c-list2__text">お客様情報</span>
						</li>
						<li>
							<span class="c-list2__number">3</span>
							<span class="c-list2__text">ご注文手続き</span>
						</li>
						<li>
							<span class="c-list2__number">4</span>
							<span class="c-list2__text">ご注文内容確認</span>
						</li>
						<li>
							<span class="c-list2__number">4</span>
							<span class="c-list2__text">完了</span>
						</li>
					</ol>
				</div>

            <section class="p-entry_sc02">
                <div class="l-cont">
                    <p class="c-form_infor__ttl">登録フォーム</p>
            <form method="post" action="{{ url('shopping_nonmember') }}" class="h-adr">
            <span class="p-country-name" style="display:none;">Japan</span>
            {{ form_widget(form._token) }}
            <div class="c-form_infor__wrap">
                <dl>
                    <dt>{{ form_label(form.name, 'お名前', { 'label_attr': { 'class': 'ec-label' }}) }}</dt>
                    <dd>
                        <div class="ec-halfInput{{ has_errors(form.name.name01, form.name.name02) ? ' error'}}">
                            {{ form_widget(form.name.name01, { 'attr': { 'placeholder': '姓' }}) }}
                            {{ form_widget(form.name.name02, { 'attr': { 'placeholder': '名' }}) }}
                            {{ form_errors(form.name.name01) }}
                            {{ form_errors(form.name.name02) }}
                        </div>
                    </dd>
                </dl>
                <dl>
                    <dt>{{ form_label(form.kana, 'お名前(カナ)', { 'label_attr': { 'class': 'ec-label' }}) }}</dt>
                    <dd>
                        <div class="ec-halfInput{{ has_errors(form.kana.kana01, form.kana.kana02) ? ' error'}}">
                            {{ form_widget(form.kana.kana01, { 'attr': { 'placeholder': 'セイ' }}) }}
                            {{ form_widget(form.kana.kana02, { 'attr': { 'placeholder': 'メイ' }}) }}
                            {{ form_errors(form.kana.kana01) }}
                            {{ form_errors(form.kana.kana02) }}
                        </div>
										</dd>
                </dl>
                {#<dl>
                    <dt>{{ form_label(form.company_name, '会社名', { 'label_attr': { 'class': 'ec-label' }}) }}</dt>
                    <dd>
                        <div class="ec-input{{ has_errors(form.kana.kana01, form.kana.kana02) ? ' error'}}">
                            {{ form_widget(form.kana.kana01, { 'attr': { 'placeholder': 'セイ' }}) }}
                            {{ form_widget(form.kana.kana02, { 'attr': { 'placeholder': 'メイ' }}) }}
                            {{ form_errors(form.kana.kana01) }}
                            {{ form_errors(form.kana.kana02) }}
                        </div>
										</dd>
                </dl>#}
                <dl class="address">
                    <dt>{{ form_label(form.address, '住所', { 'label_attr': { 'class': 'ec-label' }}) }}</dt>
                    <dd>
                        <div class="ec-zipInput{{ has_errors(form.postal_code) ? ' error' }}"><span>{{ '〒'|trans }}</span>
                            {{ form_widget(form.postal_code) }}
                            <div class="ec-zipInputHelp">
                                <div class="ec-zipInputHelp__icon">
                                    <div class="ec-icon"><img
                                                src="{{ asset('assets/icon/question-white.svg') }}" alt="">
                                    </div>
                                </div><a href="https://www.post.japanpost.jp/zipcode/" target="_blank"><span>{{ '郵便番号検索'|trans }}</span></a>
                            </div>
                            {{ form_errors(form.postal_code) }}
                        </div>

                        <div class="sl_wrap ec-select{{ has_errors(form.address.pref) ? ' error' }}">
                            {{ form_widget(form.address.pref) }}
                            {{ form_errors(form.address.pref) }}
                        </div>
                        <div class="ec-input first{{ has_errors(form.address.addr01) ? ' error' }}">
                            {{ form_widget(form.address.addr01, { 'attr': { 'placeholder': '市区町村名' }}) }}
                            {{ form_errors(form.address.addr01) }}
                        </div>
                        <div class="ec-input{{ has_errors(form.address.addr02) ? ' error' }}">
                            {{ form_widget(form.address.addr02,  { 'attr': { 'placeholder': '番地・ビル名' }}) }}
                            {{ form_errors(form.address.addr02) }}
                        </div>
                    </dd>
                </dl>
                <dl class="three_w second">
                    <dt>{{ form_label(form.phone_number, '電話番号', { 'label_attr': { 'class': 'ec-label' }}) }}</dt>
                    <dd>
                        <div class="ec-telInput{{ has_errors(form.phone_number) ? ' error' }}">
                            {{ form_widget(form.phone_number) }}
                            {{ form_errors(form.phone_number) }}
                        </div>
                    </dd>
                </dl>
                <dl class="mail">
                    <dt>{{ form_label(form.email, 'メールアドレス', { 'label_attr': { 'class': 'ec-label' }}) }}</dt>
                    <dd>
                        <div class="ec-input first{{ has_errors(form.email.first) ? ' error' }}">
                            {{ form_widget(form.email.first, { 'attr': { 'placeholder': '' }}) }}
                            {{ form_errors(form.email.first) }}
                        </div>
                        <div class="ec-input{{ has_errors(form.email.second) ? ' error' }}">
                            {{ form_widget(form.email.second, { 'attr': { 'placeholder': '確認のためもう一度入力してください' }}) }}
                            {{ form_errors(form.email.second) }}
                        </div>
                    </dd>
                </dl>
            </div>

            <div class="ec-RegisterRole__actions">
                <div class="ec-off4Grid">
                    <div class="ec-off4Grid__cell">
                        <button type="submit" class="btn__action btn__size-s btn mt8">{{ '次へ'|trans }}</button>
                        <a class="btn__cancel btn__size-s btn mt8" href="{{ url('cart') }}">{{ '戻る'|trans }}</a>
                    </div>
                </div>
            </div>

        </form>
        </div>
    </div>

			</div>
		</div>
	</div>
</main>


{% endblock %}