{% extends 'default_frame.twig' %}

{% set body_class = 'cart_page' %}

{% block main %}

<link rel="stylesheet" href="/ec4/html/template/default/assets/css/style.css">
<div class="l-wrap">
    <div class="l-naviPage"></div>
    <div class="l-main">
        <main class="p-login cart_top">


            <section class="p-login_sc01">
                <div class="l-cont">
                    <div class="c-block01">
                        <h2 class="c-block01_ttl">商品購入ログイン</h2>
                        <p class="c-block01_txt">会員登録がお済みのお客様<br>会員の方は、登録時に入力されたメールアドレスとパスワードでログインしてください。</p>
                    </div><!-- End c-block01-->
                    <form class="c-form_login" name="shopping_login" id="shopping_login" method="post" action="{{ url('mypage_login') }}">
                    <input type="hidden" name="_target_path" value="shopping" />
                    <input type="hidden" name="_failure_path" value="shopping_login" />
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="c-form_login__wrap u-bg01">
                            <dl>
                                <dt>メールアドレス</dt>
                                <dd>{{ form_widget(form.login_email) }}</dd>
                            </dl>
                            <dl>
                                <dt>パスワード</dt>
                                <dd>{{ form_widget(form.login_pass) }}</dd>
                            </dl>
                            <div class="c-btn02">
                                <button class="c-btn02_submit">ログイン</button>
                            </div>
                            <div class="c-form_login__note">
                                <p class="txt">※パスワードを忘れた方は<a class="ec-link" href="{{ url('forgot') }}">こちら</a>からパスワードの再発行を行ってください</p>
                                <p class="txt">※メールアドレスを忘れた方は、お手数ですが、<a href="/contact/form">お問い合わせページ</a>からお問い合わせください。</p>
                            </div>
                        </div><!-- End c-form_login__wrap-->
                    </form><!-- End c-form_login-->

                    <div class="p-login_moreinfor u-bg01 mb44">
                        <p class="txt">まだ会員登録されていないお客様<br>会員登録をすると便利なMyページをご利用いただけます。</p>
                        <div class="c-btn02">
                            <a class="c-btn02_submit" href="{{ url('entry') }}">新規会員登録(無料)</a>
                        </div>
                    </div>



            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') == false %}

                    <div class="p-login_moreinfor u-bg01">
                        <p class="txt">会員登録をせずに購入手続きをされたい方は、下記よりお進みください。</p>
                        <div class="c-btn02">
                            <a class="c-btn02_submit" href="{{ url('shopping_nonmember') }}">{{ 'ゲスト購入'|trans }}</a>
                        </div>
                    </div>
            {% endif %}

                </div>
            </section><!-- End p-login_sc01-->
        </main><!-- End p-login-->
    </div><!-- End l-main-->
</div><!-- End l-wrap-->



{% endblock %}